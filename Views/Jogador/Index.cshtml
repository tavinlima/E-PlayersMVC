@model Jogador
@{
    ViewData["Title"] = "Jogadores";
}

<section class="banner_cadastro_jogador">
    <h2>Cadastro de Jogador</h2>
</section>

<section class="box_cadastro_lista">
    <section class="box_cadastro_jogador">
        <form method="POST" action='@Url.Action("Cadastrar")' class="dados_jogador">
            <label>ID Jogador</label>
            <input type="text" name="IdJogador">

            <label>Nome Jogador</label>
            <input type="text" name="NomeJogador">

            <label>ID Equipe</label>
            <input type="text" name="IdEquipe">

            <label>Email</label>
            <input type="text" name="EmailJogador" required>

            <label>Senha</label>
            <input type="password" name="SenhaJogador" required>

            <button class="cadastrar_jogador" type="submit">Cadastrar</button>
        </form>
    </section>

    <section class="lista_jogadores">
        <table>
            <thead>
                <th>ID de jogador</th>
                <th>Nome de jogador</th>
                <th>ID da equipe</th>
                <th>E-mail</th>
                <th></th>
            </thead>

            <tbody>
                @foreach (Jogador item in ViewBag.Jogadores)
                {
                    <tr>
                        <td>@item.IdJogador</td>
                        <td>@item.Nome</td>
                        <td>@item.IdEquipe</td>
                        <td>@item.Email</td>
                        <td><a asp-area="" asp-controller="Jogador" asp-action="Excluir"
                            asp-route-id="@item.IdJogador">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</section>