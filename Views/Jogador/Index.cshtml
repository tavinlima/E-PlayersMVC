@model Jogador
@{
    ViewData["Title"] = "Jogadores";
}
<form method="POST" action='@Url.Action("Cadastrar")'>
    <label>ID Jogador</label>
    <input type="text" name="IdJogador">

    <label>Nome Jogador</label>
    <input type="text" name="NomeJogador">

    <label>ID Equipe</label>
    <input type="text" name="IdEquipe">

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID de jogador</th>
        <th>Nome de jogador</th>
        <th>ID da equipe</th>
    </thead>

    <tbody>
        @foreach (Jogador item in ViewBag.Jogadores)
        {
            <tr>
                <td>@item.IdJogador</td>
                <td>@item.Nome</td>
                <td>@item.IdEquipe</td>
                <td><a asp-area="" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@item.IdJogador">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>