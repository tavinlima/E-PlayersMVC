@model Equipe
@{
    ViewData["Title"] = "Equipes";
}

<form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
    <label>ID</label>
    <input type="text" name="IdEquipe">

    <label>Nome</label>
    <input type="text" name="Nome">

    <label>Imagem</label>
    <input type="file" name="Imagem">

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Logo</th>
    </thead>

    <tbody>
        @foreach (Equipe item in ViewBag.Equipes)
        {
            <tr>
                <td>@item.idEquipe</td>
                <td>@item.Nome</td>
                <td><img src="/img/Equipes/@item.Imagem" alt="Imagem da equipe @item.Nome" width ="40px" height="40px"></td>
                <td><a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@item.idEquipe">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>